<vbox style="padding: 5px;" width="100%" height="100%">
    <style>
        .button {
            font-size: 10px;
        }
    </style>
    <hbox width="100%" height="100%">
        <vbox id="header" width="100%" height="100%">
            <label id="pathViewer" text = "File Path Here...."/>
            <label text = "_______________________________________________________________________________________________"/> 
            <hbox>
            <button id="backDir" text="Go Back"/>
            <button id="copy" text="copy"/>
            <button id="paste" text="paste"/>
            <button id="move" text="move"/>
            <button id="run" text="run"/>
             </hbox>
             <scrollview style="border: 1px solid $normal-border-color;padding:5px;" width="100%" height="100%" contentWidth="100%">
                <hbox id="directoryDisplay" style="border: 1px solid $normal-border-color;padding:5px;" width="100%" continuous="true">
                </hbox>
            </scrollview>
        </vbox>              
    </hbox>    
</vbox>